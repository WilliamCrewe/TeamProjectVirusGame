<Content>
	<Event>
		<EventID>MarketDroppedBanana</EventID>
		<EventName>You see someone drop a banana</EventName>
		<EventLocationID>Market</EventLocationID>
		<IsPassiveEvent>false</IsPassiveEvent>
		<IsSingleOccurence>true</IsSingleOccurence>
		<EventOptions>
			<EventOption>
				<EventOptionID>MarketDroppedBananaKeep</EventOptionID>
				<EventOptionDescription>Pick up and keep the banana</EventOptionDescription>
				<EventOptionPostDescription>You got a banana! You put it in your pocket, you wonder where it has been...</EventOptionPostDescription>
				<EventOptionImmunityModification>-5</EventOptionImmunityModification>
				<EventOptionContagionLevelModifier>5</EventOptionContagionLevelModifier>
				<EventOptionKarmaModification>-5</EventOptionKarmaModification>
				<EventOptionItems>
					<Item>
						<ItemID>BananaID</ItemID>
						<ItemName>Banana</ItemName>
						<ItemCount>1</ItemCount>
						<ItemUsageEventID>UseBanana</ItemUsageEventID>
					</Item>
				</EventOptionItems>
			</EventOption>
			<EventOption>
				<EventOptionID>MarketDroppedBananaLeave</EventOptionID>
				<EventOptionDescription>Ignore the banana</EventOptionDescription>
				<EventOptionPostDescription>You walk over the banana, someone behind you stands on it.</EventOptionPostDescription>
				<EventOptionImmunityModification>0</EventOptionImmunityModification>
				<EventOptionContagionLevelModifier>0</EventOptionContagionLevelModifier>
				<EventOptionKarmaModification>-5</EventOptionKarmaModification>
			</EventOption>
			<EventOption>
				<EventOptionID>MarketDroppedBananaReturn</EventOptionID>
				<EventOptionDescription>Tell the person</EventOptionDescription>
				<EventOptionPostDescription>You tell the person that they dropped their banana, they thank you and pick it uo.</EventOptionPostDescription>
				<EventOptionImmunityModification>0</EventOptionImmunityModification>
				<EventOptionContagionLevelModifier>0</EventOptionContagionLevelModifier>
				<EventOptionKarmaModification>5</EventOptionKarmaModification>
			</EventOption>
		</EventOptions>
		<Rarity>Common</Rarity>
	</Event>
</Content>