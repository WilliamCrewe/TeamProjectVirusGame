				<EventOptionContagionLevelModifier>0</EventOptionContagionLevelModifier>
				<EventOptionKarmaModification>-10</EventOptionKarmaModification>
				<EventOptionItems>
					<Item>
						<ItemID>DogBallID</ItemID>
						<ItemName>DogBall</ItemName>
						<ItemCount>1</ItemCount>
						<ItemUsageEventID>UseDogBall</ItemUsageEventID>
					</Item>
				</EventOptionItems>
			</EventOption>
			<EventOption>
				<EventOptionID>ShopIgnoreDog</EventOptionID>
				<EventOptionDescription>Leave it be and enter the shop</EventOptionDescription>
				<EventOptionPostDescription></EventOptionPostDescription>
				<EventOptionImmunityModification>0</EventOptionImmunityModification>
				<EventOptionContagionLevelModifier>0</EventOptionContagionLevelModifier>
				<EventOptionKarmaModification>10</EventOptionKarmaModification>
