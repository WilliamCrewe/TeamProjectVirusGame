<Content>
	<Event>
		<EventID>MarketCrowd</EventID>
		<EventName>You see a crowd gathering in the market.</EventName>
		<EventLocationID>Market</EventLocationID>
		<IsPassiveEvent>false</IsPassiveEvent>
		<IsSingleOccurence>true</IsSingleOccurence>
		<EventOptions>
			<EventOption>
				<EventOptionID>MarketCrowdGoOver</EventOptionID>
				<EventOptionDescription>Go over and see why the crowd have gathered.</EventOptionDescription>
				<EventOptionPostDescription>One of the market stalls are having a flash sale. By going into the crowd you have increased your chance of catching the virus. </EventOptionPostDescription>
				<EventOptionImmunityModification>0</EventOptionImmunityModification>
				<EventOptionContagionLevelModifier>5</EventOptionContagionLevelModifier>
				<EventOptionKarmaModification>0</EventOptionKarmaModification>
			</EventOption>
			<EventOption>
				<EventOptionID>MarketCrowdWalkAway</EventOptionID>
				<EventOptionDescription>Walk away from the crowd.</EventOptionDescription>
				<EventOptionPostDescription>By not going into the crowd you have reduced your chance of catching the virus.</EventOptionPostDescription>
				<EventOptionImmunityModification>5</EventOptionImmunityModification>
				<EventOptionContagionLevelModifier>0</EventOptionContagionLevelModifier>
				<EventOptionKarmaModification>0</EventOptionKarmaModification>
			</EventOption>
		</EventOptions>
		<Rarity>Common</Rarity>
	</Event>
</Content>